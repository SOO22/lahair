/* Start Responsive layout CSS */
/* Make the nav stack when the screen is less than 400px wide*/
@media screen and (max-width: 400px) {
  .dropbtn, .dropdown, .dropdown-content {
    width: 100%;
  }
}
/* Resize the iframe calendar*/
@media (max-width: 300px) {
  .big-container {
    display: none;
  }
}
/* Make the two form columns stack on top of each other when the screen is less than 600px wide*/
@media screen and (max-width: 600px) {
  .column-25, .column-75, input[type=submit] {
    width: 100%;
    margin-top: 0;
  }
}
/* Make the two page columns stack on top of each other when the screen is less than 800px wide */
@media screen and (max-width: 800px) {
  .leftcolumn, .rightcolumn {
    width: 100%;
  }
}
/* End Responsive layout CSS */
/* End Responsive LAHair CSS */
